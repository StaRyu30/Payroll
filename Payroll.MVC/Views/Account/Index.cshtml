<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @ViewBag.Error

        @*<table cellpadding="2" cellspacing="2">
                <tr>
                    <td>@Html.LabelFor(model => model.Username)</td>
